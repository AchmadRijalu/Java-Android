<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".readUser">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="108dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/get_nama"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        android:text="Value"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/get_umur"
        android:layout_width="75dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="value"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/get_nama"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/get_nama"
        app:layout_constraintTop_toBottomOf="@+id/get_nama" />

    <TextView
        android:id="@+id/get_alamat"
        android:layout_width="75dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:text="value"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/get_umur"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/get_umur"
        app:layout_constraintTop_toBottomOf="@+id/get_umur" />

    <Button
        android:id="@+id/get_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="@+id/get_alamat"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/get_alamat"
        app:layout_constraintTop_toBottomOf="@+id/get_alamat" />

    <Button
        android:id="@+id/get_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="@+id/get_edit"
        app:layout_constraintStart_toStartOf="@+id/get_edit"
        app:layout_constraintTop_toBottomOf="@+id/get_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>